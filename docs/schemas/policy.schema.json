{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gradio-chat-agent.local/schemas/policy.schema.json",
  "title": "ProjectPolicy",
  "description": "Governance policy for a project, defining limits, budgets, and approvals.",
  "type": "object",
  "properties": {
    "project_id": {
      "type": ["string", "integer"],
      "description": "The unique identifier for the project."
    },
    "limits": {
      "type": "object",
      "properties": {
        "rate": {
          "type": "object",
          "properties": {
            "per_minute": { "type": "integer", "minimum": 0 },
            "per_hour": { "type": "integer", "minimum": 0 }
          }
        },
        "quota": {
          "type": "object",
          "properties": {
            "per_day": { "type": "integer", "minimum": 0 }
          }
        },
        "budget": {
          "type": "object",
          "properties": {
            "daily": { "type": "number", "minimum": 0 }
          }
        }
      }
    },
    "approvals": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["min_cost", "required_role"],
        "properties": {
          "min_cost": { "type": "number", "minimum": 0 },
          "required_role": { "type": "string", "enum": ["viewer", "operator", "admin"] }
        }
      }
    },
    "action_budgets": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "daily": { "type": "integer", "minimum": 0 }
        }
      }
    },
    "role_mappings": {
      "type": "array",
      "description": "Rules for dynamic role assignment based on user attributes.",
      "items": {
        "type": "object",
        "required": ["role", "condition"],
        "properties": {
          "role": { "type": "string", "enum": ["viewer", "operator", "admin"] },
          "condition": { "type": "string", "description": "Python expression evaluated against the user object (e.g., 'user.email.endswith(\"@corp.com\")')." }
        }
      }
    },
    "rules": {
      "type": "array",
      "description": "Custom governance rules evaluated by the engine.",
      "items": {
        "type": "object",
        "required": ["id", "condition", "effect"],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9._-]+$" },
          "description": { "type": "string" },
          "condition": { "type": "string", "description": "Python expression evaluated against {state, inputs, user, roles}." },
          "effect": { "type": "string", "enum": ["allow", "reject", "require_approval"] },
          "message": { "type": "string", "description": "Custom message for rejections or approvals." }
        }
      }
    },
    "execution_windows": {
      "type": "object",
      "properties": {
        "allowed": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["days", "hours"],
            "properties": {
              "days": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["mon", "tue", "wed", "thu", "fri", "sat", "sun"]
                }
              },
              "hours": {
                "type": "array",
                "minItems": 2,
                "maxItems": 2,
                "items": {
                  "type": "string",
                  "pattern": "^([01]\\d|2[0-3]):([0-5]\\d)$"
                }
              }
            }
          }
        }
      }
    }
  }
}